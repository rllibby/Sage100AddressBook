<UserControl x:Class="Sage100AddressBook.CustomControls.NumericInputBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:Sage100AddressBook.CustomControls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:my="using:Telerik.UI.Xaml.Controls.Input"
             d:DesignHeight="90"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="Display"
                   Grid.Row="0"
                   Margin="4,4"
                   Text="" />
        <my:RadNumericBox x:Name="InputText"
                          Grid.Row="1"
                          Margin="10,10"
                          InputScope="Number"
                          LargeChange="5"
                          Maximum="100000"
                          SmallChange="1"
                          ValueChanged="OnValueChanged" />
    </Grid>
</UserControl>
